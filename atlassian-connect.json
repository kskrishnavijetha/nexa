
{
  "key": "nexabloom-jira-integration",
  "name": "NexaBloom Jira Integration",
  "description": "Connect NexaBloom with Jira for seamless two-way communication",
  "vendor": {
    "name": "NexaBloom",
    "url": "https://nexabloom.xyz"
  },
  "baseUrl": "https://nexabloom.xyz",
  "authentication": {
    "type": "jwt"
  },
  "lifecycle": {
    "installed": "/jira/installed",
    "uninstalled": "/jira/uninstalled"
  },
  "scopes": [
    "read",
    "write"
  ],
  "modules": {
    "generalPages": [
      {
        "url": "/jira/dashboard",
        "key": "nexabloom-dashboard",
        "location": "system.top.navigation.bar",
        "name": {
          "value": "NexaBloom Dashboard"
        }
      }
    ],
    "webhooks": [
      {
        "event": "jira:issue_created",
        "url": "/jira/webhook/issue-created"
      },
      {
        "event": "jira:issue_updated",
        "url": "/jira/webhook/issue-updated"
      },
      {
        "event": "jira:issue_deleted",
        "url": "/jira/webhook/issue-deleted"
      }
    ]
  },
  "apiMigrations": {
    "gdpr": true
  }
}
